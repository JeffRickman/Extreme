<p id="notice"><%= notice %></p>

<h1>Crafts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Copyright</th>
      <th>Equipment</th>
      <th>Instructions</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crafts.each do |craft| %>
      <tr>
        <td><%= craft.name %></td>
        <td><%= craft.category %></td>
        <td><%= craft.copyright %></td>
        <td><%= craft.equipment %></td>
        <td><%= craft.instructions %></td>
        <td><%= craft.activity %></td>
        <td><%= link_to 'Show', craft %></td>
        <td><%= link_to 'Edit', edit_craft_path(craft) %></td>
        <td><%= link_to 'Destroy', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Craft', new_craft_path %>
