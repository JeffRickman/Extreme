<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Sex</th>
      <th>Address l1ne1</th>
      <th>Address line2</th>
      <th>Diet status</th>
      <th>Diet</th>
      <th>Allergy status</th>
      <th>Allergy</th>
      <th>Parent contact</th>
      <th>Parent phone</th>
      <th>Parent email</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.dob %></td>
        <td><%= student.sex %></td>
        <td><%= student.address_l1ne1 %></td>
        <td><%= student.address_line2 %></td>
        <td><%= student.diet_status %></td>
        <td><%= student.diet %></td>
        <td><%= student.allergy_status %></td>
        <td><%= student.allergy %></td>
        <td><%= student.parent_contact %></td>
        <td><%= student.parent_phone %></td>
        <td><%= student.parent_email %></td>
        <td><%= student.status %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

