
<h2><%= @activity.name %></h2>
<p> <%= @activity.description %>
    <%= @activity.activity_type %>
    <%= @activity.details %>
</p>
<hr>
<%= link_to "Edit", edit_activity_path(@activity), :class => 'btn btn-default' %>
<%= link_to "Delete", activity_path(@activity), 
                      method: :delete, 
                      data: {confirm: 'Are you sure?'},
                      :class => 'btn btn-danger' %>