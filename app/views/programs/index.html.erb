

<p id="notice"><%= notice %></p>

<div class="form-style-9">
<div class="form-style-9-heading">
  <h1>Programs</h1>
  <%= render 'namesearchform' %> 
</div>



<table class="table table-hover" id="myTable">
  <thead class="thead-dark">
    <tr>
      <th style="width:32%;"> <%= sort_link @search, :name, "Program Name" %></th>
      <th style="width:10%;">Date</th>
      <th style="width:32%;">Leader</th>
      <th style="width:10%;">Status</th>
      <th style="width:12%;">Actions</th>  
   <!--   <th>Theme</th>  -->
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.name %></td>
        <td><%= program.program_start_date %></td>
      <!--  <td><%= program.theme %></td>  -->
      <% byebug %>
        <td> <%= program.leader.name if program.leaders  %></td>
        <td><%= program.status %></td>
        <td><a href= <%= edit_program_path(program) %>><i class="fas fa-edit fa-lg"></i>&nbsp;</a>
        <a href= <%= program_path(program) %>><i class="fas fa-eye fa-lg"></i>&nbsp;</a>
        <a href=<%= program_path(program) %> data-method="delete"> <i class="fas fa-trash-alt fa-lg"></i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program', new_program_path, class: 'btn btn-primary' %>

</div>
