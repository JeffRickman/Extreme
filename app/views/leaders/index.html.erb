<h1>Leaders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Sex</th>
      <th>Address l1ne1</th>
      <th>Address line2</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Diet status</th>
      <th>Diet</th>
      <th>Allergy status</th>
      <th>Allergy</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaders.each do |leader| %>
      <tr>
        <td><%= leader.name %></td>
        <td><%= leader.dob %></td>
        <td><%= leader.sex %></td>
        <td><%= leader.address_l1ne1 %></td>
        <td><%= leader.address_line2 %></td>
        <td><%= leader.phone %></td>
        <td><%= leader.email %></td>
        <td><%= leader.diet_status %></td>
        <td><%= leader.diet %></td>
        <td><%= leader.allergy_status %></td>
        <td><%= leader.allergy %></td>
        <td><%= leader.status %></td>
        <td><%= link_to 'Show', leader %></td>
        <td><%= link_to 'Edit', edit_leader_path(leader) %></td>
        <td><%= link_to 'Destroy', leader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

